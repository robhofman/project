<Window x:Class="nmct.ba.cashlessproject.tempui.KassaWWVergeten"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KassaWWVergeten" Height="800" Width="1100">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="15*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center">E-mail</Label>
        <TextBox Name="txtMail" Grid.Column="1" Grid.Row="2"></TextBox>
        <Button Name="btnStuurWW" Grid.Column="1" Style="{StaticResource button}" Grid.Row="4">Wachtwoord Vergeten</Button>

    </Grid>
</Window>
